<h1>Edit <%= @blogger.name %></h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <li><%= e %></li>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :age %><br>
    <%= f.number_field :age %><br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br>

    <%= f.submit %>
<% end %>