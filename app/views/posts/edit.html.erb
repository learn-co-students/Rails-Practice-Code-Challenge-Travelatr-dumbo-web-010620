<h1>Edit post</h1>

<% if flash[:errors] %>
    <% flash[:errors] do |e| %>
        <li><% e %></li>
    <% end %>
<% end %>

<%= form_for @post do |f| %>    
    
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %>

    <%= f.submit %>
<% end %>