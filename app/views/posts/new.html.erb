<h1>New post</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <li><%= e %></li>
    <% end %>
<% end %>

<%= form_for @post do |f| %>    
    
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>

    <%= f.submit %>
<% end %>


